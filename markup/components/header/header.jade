mixin header(data)
    .header(class!=data).not-styleLink
        .header__content
            .header__mobile
                .header__mobile-section.header__mobile-section_btn.header__mobile-section_notBorder(style="line-height: normal;")
                    .mobile-list-anim
                        input(type="checkbox", id="header-bottom-toggleMenuMbl")
                        label.menuTopMobel(for="header-bottom-toggleMenuMbl")
                            span.menu-mobile
                                span.menu-mobile-hamburger.one
                                span.menu-mobile-hamburger.two
                                span.menu-mobile-hamburger.three

                .header__mobile-section.text-center
                    a(href="#").header__mobile-phone 8 (351) 200 40 18
                .header__mobile-section.header__mobile-section_btn
                    a(href="#").header__mobile-link: +icon('search')




            a(href="#").header__logo: +img('assets/header/logo', 'png')
            .header__top
                .container.header__padding-left.header__top-content.container-header
                    a(href="#").header__top-padding.header__top-link.hidden-lg-up Перейти в каталог
                    .header__top-padding.header__top-padding_top
                        .row
                            .col-lg-9
                                ul.header__top-nav
                                    li.hidden-lg-up: a(href="#"): span Спецпредложения
                                    li.hidden-lg-up: a(href="#"): span Наши объекты
                                    li: a(href="#"): span Наши партнёры
                                    li: a(href="#"): span Отзывы
                                    li: a(href="#"): span Доставка и оплата
                                    li: a(href="#"): span Вопрос и ответ
                                    li.hidden-md-down: a(href="#"): span Контактная информация
                                    li.hidden-lg-up: a(href="#"): span Контакы
                            .col-lg-3
                                .hidden-lg-up
                                    br
                                a(href="#").header__download
                                    span.header__download-icon: i.s-download
                                    span.header__download-title: span Скачать прайс-лист
                                div.hidden-lg-up
                                    button.btn.btn-blue.btn-sm(data-toggle="modal" data-target="#modal-callback") Отправить заявку
            .header__bottom
                .container.header__padding-left.container-header
                    .header__table
                        .header__table-cell
                            .header__bottom-nav
                                ul
                                    li.parent
                                        a(href="#")
                                            span Каталог
                                                +icon('arrow-bottom')
                                        .sub-menu
                                            .container
                                                .sub-menu__sections
                                                    .sub-menu__sections-section
                                                        .sub-menu__list
                                                            ul
                                                                li: a(href="#") Кирпич лицевой керамический
                                                                li: a(href="#") Кирпич рядовой керамический
                                                                li: a(href="#") Кирпич полнотелый
                                                                li: a(href="#") Кирпич полнотелый с пустотностью 6%
                                                                li: a(href="#") Кирпич полнотелый с пустотностью 12%
                                                                li: a(href="#") Кирпич пустотелый
                                                                li: a(href="#") Кирпич силикатный
                                                    .sub-menu__sections-section
                                                        .sub-menu__list
                                                            ul
                                                                li: a(href="#") Арматура
                                                                li: a(href="#") Швеллер
                                                                li: a(href="#") Двутавр
                                                                li: a(href="#") Кровельные материалы
                                                                li: a(href="#") Пеноблок
                                                                li: a(href="#") Газоблок
                                                                li: a(href="#") Шлакоблок
                                                    .sub-menu__sections-section
                                                        .sub-menu__list
                                                            ul
                                                                li: a(href="#") Технониколь
                                                                li: a(href="#") Эковер
                                                                li: a(href="#") Утеплитель ИЗБА
                                                                li: a(href="#") Плиты перекрытия ПБ
                                                                li: a(href="#") Блоки ФБС
                                                                li: a(href="#") Фундаментная лента
                                                                li: a(href="#") Перемычки железобетонные
                                                    .sub-menu__sections-section
                                                        .sub-menu__list
                                                            ul
                                                                li: a(href="#") Плиты перекрытия ПК
                                                                li: a(href="#") Лестничные ступени
                                                                li: a(href="#") Опорные подушки
                                                                li: a(href="#") Прогоны ПРГ
                                                                li: a(href="#") Плиты плоские


                                    li: a(href="#"): span Спецпредложения
                                    li: a(href="#"): span Наши объекты

                        .header__table-cell: .header__bottom-line
                        .header__table-cell
                            .header__phones
                                a(href="#").header__phones-item: span 8 (351) 200 40 18
                                a(href="#").header__phones-item: span 8 (909) 069 14 60
                        .header__table-cell.header__table-cell_btn
                            button.btn.btn-blue.btn-sm(data-toggle="modal" data-target="#modal-callback") Отправить заявку































